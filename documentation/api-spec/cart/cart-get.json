{
    "openapi": "3.0.0",
    "info": {
        "title": "Get User's Shopping Cart API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/cart": {
            "get": {
                "summary": "Get User's Shopping Cart",
                "description": "Endpoint to retrieve the contents of a user's shopping cart.",
                "parameters": [
                    {
                        "name": "email",
                        "in": "body",
                        "description": "Email of the user",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": true,
                                    "message": "rhezapandya's Shopping Cart",
                                    "carts": {
                                        "1": {
                                            "rowId": 1,
                                            "item_id": "2",
                                            "name_product": "TOMAT",
                                            "qty": 1,
                                            "price": "19,900.00",
                                            "tax": "1,990.00",
                                            "subtotal": "21,890.00"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Failed or Cart Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": false,
                                    "message": "Validation not fulfilled or Cart not found",
                                    "errors": {
                                        "email": [
                                            "The email field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}