{
    "openapi": "3.0.0",
    "info": {
        "title": "Get User's Checkout API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/checkout": {
            "get": {
                "summary": "Get User's Checkout",
                "description": "Endpoint to retrieve checkout from a user by ID.",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "body",
                        "description": "ID of user",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
