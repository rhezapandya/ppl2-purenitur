{
    "openapi": "3.0.0",
    "info": {
        "title": "Delete Product API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/admin/products/delete/{id}": {
            "delete": {
                "summary": "Delete Product",
                "description": "Endpoint to delete product on product ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of product",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": true,
                                    "message": "Product Deleted successfully!",
                                    "product": 1,
                                    "product_detail": 1
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": false,
                                    "message": "Product not Found!"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation not Fulfilled",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": false,
                                    "message": "Validation not fulfilled!",
                                    "errors": {
                                        "id": [
                                            "The id field is required.",
                                            "The id field must be a integer."
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}