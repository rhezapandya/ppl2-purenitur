{
    "openapi": "3.0.0",
    "info": {
        "title": "Password Update API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/password-update": {
            "post": {
                "summary": "Password Update",
                "description": "Endpoint to Update Logged In Account Password.",
                "parameters": [
                    {
                        "name": "user_login",
                        "in": "Authorization",
                        "description": "Token of user login",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "body",
                        "description": "Password of user account",
                        "required": true,
                        "schema": {
                            "minimum": 8
                        }
                    },
                    {
                        "name": "password_confirmation",
                        "in": "body",
                        "description": "Password of user account",
                        "required": true,
                        "schema": {
                            "same": "password"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": true,
                                    "message": "User Update successfully!",
                                    "users": 1
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": false,
                                    "message": "User not Found!"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation not fulfilled",
                        "content": {
                            "application/json": {
                                "example-1": {
                                    "status": false,
                                    "message": "Validation not fulfilled!",
                                    "errors": {
                                        "id": [
                                            "The id field is required.",
                                            "The id field must be a integer."
                                        ]
                                    }
                                },
                                "example-2": {
                                    "status": false,
                                    "message": "Validation not fulfilled!",
                                    "errors": {
                                        "password": [
                                            "The password field is required.",
                                            "The password field must be greater than 8 characters."
                                        ],
                                        "password_confirmation": [
                                            "The password_confirmation field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "User not logged in or user not admin",
                        "content": {
                            "application/json": {
                                "example": {
                                    "status": false,
                                    "message": "User not logged in",
                                    "errors": {
                                        "reroute": [
                                            "Reroute to login page."
                                        ]
                                    }
                                },
                                "example2": {
                                    "status": false,
                                    "message": "User not admin",
                                    "errors": {
                                        "reroute": [
                                            "Reroute to dashboard."
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}